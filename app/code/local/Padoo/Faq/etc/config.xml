<?xml version="1.0"?>
<config>
    <modules>
        <Padoo_Faq>
            <version>1.0.5</version>
        </Padoo_Faq>
    </modules>
    <frontend>
        <routers>
            <faq>
                <use>standard</use>
                <args>
                    <module>Padoo_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
		<translate>
			<modules>
				<Padoo_Faq>
					<files>
						<default>Padoo_Faq.csv</default>
					</files>
				</Padoo_Faq>
			</modules>
		</translate>
		<layout>
            <updates>
                <faq>
                    <file>padoo_faq.xml</file>
                </faq>
            </updates>
        </layout>
    </frontend> 
	<default>
		<faq>
			<general>
				<responsive>1</responsive>
			</general>
		</faq>
		<captcha>
			<frontend>
				<areas>
					<faq>
						<label>Faq Page</label>
					</faq>
				</areas>
			</frontend>
		</captcha>
		<customer>
			<captcha>
				<enable>1</enable>
				<always_for>
					<faq>1</faq>
				</always_for>
				<forms>faq</forms>
			</captcha>
		</customer>
	</default>    
    <admin>
        <routers>
            <faq>
                <use>admin</use>
                <args>
                    <module>Padoo_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
    </admin>    
    <adminhtml>
        <menu>
            <faq>
                <title>FAQ</title>
                <sort_order>75</sort_order>
                <children>
                    <faq>
                        <title>Manage FAQ</title>
                        <sort_order>0</sort_order>
                        <action>faq/adminhtml_faq</action>
                    </faq>
                    <faqgroup>
                        <title>Manage FAQ Group</title>
                        <sort_order>1</sort_order>
                        <action>faq/adminhtml_faqgroup</action>
                    </faqgroup>
                </children>
            </faq>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <faq>
							<title>FAQ</title>
							<sort_order>75</sort_order>
							<children>
								<faq>
									<title>Manage FAQ</title>
									<sort_order>0</sort_order>
									<action>faq/adminhtml_faq</action>
								</faq>
								<faqgroup>
									<title>Manage FAQ Group</title>
									<sort_order>1</sort_order>
									<action>faq/adminhtml_faqgroup</action>
								</faqgroup>
							</children>
						</faq>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <faq>
                    <file>padoo_faq.xml</file>
                </faq>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <faq>
                <class>Padoo_Faq_Model</class>
                <resourceModel>faq_mysql4</resourceModel>
            </faq>
            <faq_mysql4>
                <class>Padoo_Faq_Model_Mysql4</class>
                <entities>
                    <faq>
                        <table>padoo_faq</table>
                    </faq>
                    <faqgroup>
                        <table>padoo_faqgroup</table>
                    </faqgroup>
                </entities>
            </faq_mysql4>
        </models>
        <blocks>
            <faq>
                <class>Padoo_Faq_Block</class>
            </faq>            
        </blocks>
        <helpers>
            <faq>
                <class>Padoo_Faq_Helper</class>
            </faq>
        </helpers>
        <resources>
            <faq_setup>
                <setup>
                    <module>Padoo_Faq</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faq_setup>
            <faq_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faq_write>
            <faq_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faq_read>
        </resources>
		<template>
            <email>
                <faq_options_mail_to_store_template translate="label">
                    <label>Notification Faq</label>
                    <file>faq_options_mail_to_store_template.html</file>
                    <type>html</type>
                </faq_options_mail_to_store_template>
            </email>
        </template>
    </global>
</config>